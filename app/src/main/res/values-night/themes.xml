<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.BladePlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/bladeGrey</item>
        <item name="colorPrimaryVariant">@color/bladeGreyDark</item>
        <item name="colorOnPrimary">@color/bladeGreyLight</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/bladeGreyLight</item>
        <item name="colorSecondaryVariant">@color/bladeGreyLighter</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Window background : color shown during loading -->
        <item name="android:windowBackground">@color/bladeGreyDark</item>
    </style>
</resources>